{% extends 'base.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block body %}
<main>
    <header>
        <div id="current-user"></div>
        <div id="title-page">
            <div class="flex-header">
                <h1>{{ project.name }}</h1>

                <div class="user-list">
                    {% for user in project.getUsers() %}
                    <div class="avatar">{{ user.getInitials() }}</div>
                    {% endfor %}
                </div>

                <a
                    class="button"
                    href="{{ url('projects.edit', { id: project.id }) }}"
                >
                    Modifier
                </a>
            </div>
        </div>
    </header>

    <div id="content">
        <div id="tasks-container">
            <div class="task-column">
                <h2>To Do</h2>
                <div class="tasks-list">
                    {% for task in project.getTasks() %}
                        {% if task.getState() is same as('TODO') %}
                            <a class="task" href="{{ url('tasks.show', { id: task.id }) }}">
                                <h3>{{ task.getTitle() }}</h3>
                                <p>{{ task.getBody() }}</p>
                                <div class="task-infos">
                                    <div class="task-deadline">
                                        <i class="fa-regular fa-calendar"></i> {{ task.getLikelyEndAt().format('d/m/Y') }}
                                    </div>
                                    {% if task.getUser() %}
                                        <div class="mini-user">
                                            {{ task.getUser().getInitials() }}
                                        </div>
                                    {% endif %}
                                </div>
                            </a>
                        {% endif %}
                    {% endfor %}

                    <a href="{{ url('tasks.create', { project: project.id, state: 'TODO' }) }}" class="task-add">
                        + Ajouter une tâche
                    </a>
                </div>
            </div>
            <div class="task-column">
                <h2>Doing</h2>
                <div class="tasks-list">
                    <a class="task" href="tache.html">
                        <h3>Développement de la page employé</h3>
                        <p>Page employé avec liste des employés, édition, modification, suppression et création des employés</p>
                        <div class="task-infos">
                            <div class="task-deadline">
                                <i class="fa-regular fa-calendar"></i> 14/09/2023
                            </div>
                            <div class="mini-user">
                                DB
                            </div>
                        </div>
                    </a>
                    <a href="{{ url('tasks.create', { project: project.id, state: 'DOING' }) }}" class="task-add">
                        + Ajouter une tâche
                    </a>
                </div>
            </div>
            <div class="task-column">
                <h2>Done</h2>
                <div class="tasks-list">
                    <a class="task" href="tache.html">
                        <h3>Développement de la structure globale</h3>
                        <p>Intégrer les maquettes</p>
                        <div class="task-infos">
                            <div class="task-deadline">
                                <i class="fa-regular fa-calendar"></i> 03/09/2023
                            </div>
                            <div class="mini-user">
                                DB
                            </div>
                        </div>
                    </a>
                    <a class="task" href="tache.html">
                        <h3>Développement de la page projet</h3>
                        <p>Page projet avec liste des tâches, édition, modification, suppression et création des tâches</p>
                        <div class="task-infos">
                            <div class="mini-user">
                                ND
                            </div>
                        </div>
                    </a>
                    <a href="{{ url('tasks.create', { project: project.id, state: 'DONE' }) }}" class="task-add">
                        + Ajouter une tâche
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}