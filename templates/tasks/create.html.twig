{% extends 'base.html.twig' %}

{% block title %}Nouvelle tâche{% endblock %}

{% block body %}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>{{ project.getName() }}: Ajouter une tâche</h1>
            </div>
        </header>
        <div id="content">
            {{ form_start(form) }}
                <div>{{ form_errors(form) }}</div>

                <div>{{ form_row(form.title) }}</div>

                <div>{{ form_row(form.body) }}</div>

                <div>{{ form_row(form.state) }}</div>

                <div>{{ form_row(form.likely_end_at) }}</div>

                <div>{{ form_row(form.User) }}</div>

                <button type="submit" class="button button-submit">Continuer</button>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
