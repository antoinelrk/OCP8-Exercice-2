{% extends 'base.html.twig' %}

{% block title %}Nouvelle tâche{% endblock %}

{% block body %}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>{{ project.getName() }}: Ajouter une tâche</h1>
            </div>
        </header>
        <div id="content">
            {{ form_start(form) }}
            <div>{{ form_errors(form) }}</div>

            <div>{{ form_row(form.title) }}</div>

            <div>{{ form_row(form.body) }}</div>

            <div>{{ form_row(form.state) }}</div>

            {{ form_end(form) }}

            <button class="button button-submit">Continuer</button>
        </div>
    </main>
{% endblock %}
